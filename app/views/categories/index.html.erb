<p id="notice"><%= notice %></p>

<div class="container">
<h1>Categories</h1>
<div class="media">
  <div class="media-body">
    <table class="table table-hover">
        <thead>
          <tr>
            <th>Category name</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @categories.each do |category| %>
            <tr>
              <td><%= category.category_name %></td>
              <td><%= link_to 'Show', category, class: 'btn btn-mini' %></td>
              <td><%= link_to 'Delete', category, method: :delete, class: 'btn btn-mini btn-danger', data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
  </div>
</div>


<br>

<%= link_to 'New Category', new_category_path, class: 'btn btn-mini' %> |
<%= link_to 'Back to Pantry', pantries_path, class: 'btn btn-mini' %>
</div>